@using Microsoft.AspNetCore.Identity
@using HealthRec.Data.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="bi bi-hospital text-primary me-2 fs-3"></i>
            <span class="fw-bold text-primary">HealthRec</span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door me-1"></i>Home
                    </a>
                </li>

                @if (SignInManager.IsSignedIn(User))
                {
                    @if (User.IsInRole("Doctor"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Doctor" asp-action="MyPatients">
                                <i class="bi bi-people me-1"></i>My Patients
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Appointments" asp-action="DoctorSchedule">
                                <i class="bi bi-calendar-check me-1"></i>My Schedule
                            </a>
                        </li>
                    }
                    else if (User.IsInRole("Patient"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="MedicalRecords" asp-action="PatientRecords">
                                <i class="bi bi-file-medical me-1"></i>My Records
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Appointments"
                               asp-action="PatientAppointments">
                                <i class="bi bi-calendar-check me-1"></i>My Appointments
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Prescriptions"
                               asp-action="PatientPrescriptions">
                                <i class="bi bi-capsule me-1"></i>My Prescriptions
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Doctor" asp-action="Index">Doctors</a>
                        </li>
                    }
                }

                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">
                        <i class="bi bi-info-circle me-1"></i>About
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contacts">
                        <i class="bi bi-envelope me-1"></i>Contact
                    </a>
                </li>
            </ul>

            <ul class="navbar-nav ms-auto d-flex align-items-center">
                @if (SignInManager.IsSignedIn(User))
                {
                    var user = await UserManager.GetUserAsync(User);

                    <li class="nav-item">
                        <a class="nav-link position-relative" href="#" id="notificationsDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-bell fs-5"></i>
                            <span
                                class="position-absolute top-25 start-75 translate-middle badge rounded-pill bg-danger">
                                3
                                <span class="visually-hidden">unread notifications</span>
                            </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationsDropdown"
                            style="width: 300px">
                            <li><h6 class="dropdown-header">Notifications</h6></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center py-2" href="#">
                                    <div class="flex-shrink-0">
                                        <div class="bg-primary bg-opacity-10 text-primary p-2 rounded-circle">
                                            <i class="bi bi-calendar-event"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <p class="mb-0 fw-semibold">Appointment Reminder</p>
                                        <p class="small text-muted mb-0">Your appointment is scheduled for tomorrow at
                                            10:00 AM</p>
                                        <p class="small text-muted mb-0">2 hours ago</p>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center py-2" href="#">
                                    <div class="flex-shrink-0">
                                        <div class="bg-success bg-opacity-10 text-success p-2 rounded-circle">
                                            <i class="bi bi-file-medical"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <p class="mb-0 fw-semibold">New Test Results</p>
                                        <p class="small text-muted mb-0">Your lab results are now available</p>
                                        <p class="small text-muted mb-0">1 day ago</p>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center py-2" href="#">
                                    <div class="flex-shrink-0">
                                        <div class="bg-info bg-opacity-10 text-info p-2 rounded-circle">
                                            <i class="bi bi-capsule"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <p class="mb-0 fw-semibold">Prescription Renewal</p>
                                        <p class="small text-muted mb-0">Your prescription needs to be renewed</p>
                                        <p class="small text-muted mb-0">3 days ago</p>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown ms-2">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                           role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">

                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>My Profile</a></li>
                            @if (User.IsInRole("Doctor"))
                            {
                                <li><a class="dropdown-item" href="#"><i class="bi bi-calendar-check me-2"></i>My
                                        Schedule</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" href="#"><i class="bi bi-calendar-check me-2"></i>My
                                        Appointments</a></li>
                            }

                        </ul>
                    </li>

                    <li class="nav-item me-2">
                        <form class="btn btn-outline-primary" asp-area="" asp-controller="Authentication" asp-action="Logout">
                            <button type="submit" class="dropdown-item">
                                <i class="bi bi-box-arrow-left me-1"></i>Log out
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-primary" asp-area="" asp-controller="Authentication"
                           asp-action="Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Log in
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>