@model HealthRec.Services.Patient.Models.PatientModel

@{
    ViewData["Title"] = "Patient Details";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Patient Details</h5>
                    <a asp-controller="Doctor" asp-action="Index" class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-left"></i> Back to Doctors
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Phone:</dt>
                                <dd class="col-sm-8">@Model.Phone</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Security Code:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary">@Model.Code</span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col">
                            <h6>Medical Record Access</h6>
                            <p>
                                Patient can use security code <strong>@Model.Code</strong> to access their medical records
                                without logging in.
                            </p>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col">
                            <a href="#" class="btn btn-primary">
                                <i class="bi bi-journal-text"></i> View Medical Records
                            </a>
                            <a href="#" class="btn btn-outline-primary">
                                <i class="bi bi-pencil"></i> Edit Patient
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>