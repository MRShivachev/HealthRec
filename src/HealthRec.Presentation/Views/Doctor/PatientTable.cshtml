@model PatientTableViewModel
@{
    ViewData["Title"] = "Patients Table";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Patients List</h2>
    <input type="text" id="searchInput" class="form-control mb-3" placeholder="Search patients..." onkeyup="filterPatients()">

    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <a asp-controller="Patient" asp-action="Create" class="btn btn-light btn-sm">
            <i class="bi bi-plus-circle"></i> Add New Patient
        </a>
    </div>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Diagnosis</th>
                <th>Contact</th>
            </tr>
        </thead>
        <tbody id="patientsTableBody">
        
        @if (Model.Patients.Any())
        {
            foreach (var patient in Model.Patients)
            {
                <tr>
                    <td>@patient.Id</td>
                    <td>@patient.Name</td>
                    <td>@patient.SecurityCode</td>
                </tr>
            }
        }
        else
        {
            <div class="alert alert-info">
                No patients found for this doctor.
            </div>
        }
        </tbody>
    </table>
</div>

<script>
    function filterPatients() {
        let input = document.getElementById("searchInput").value.toLowerCase();
        let rows = document.querySelectorAll("#patientsTableBody tr");

        rows.forEach(row => {
            let name = row.cells[1].textContent.toLowerCase();
            row.style.display = name.includes(input) ? "" : "none";
        });
    }
</script>

