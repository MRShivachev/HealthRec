@model DoctorIndexViewModel

@{
    ViewData["Title"] = "Doctors";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1 class="mb-4">Doctors</h1>
    <a asp-controller="Doctor" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create Doctor
    </a>
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">All Doctors</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Specialty</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model != null && Model.Doctors!.Any())
                    {
                        @foreach (var doctor in Model.Doctors!)
                        {
                            <tr>
                                <td>@doctor.Id</td>
                                <td>@doctor.Name</td>
                                <td>@doctor.Specialisation</td>
                                <td>
                                    <a asp-controller="Doctor" asp-action="Details" asp-route-id="@doctor.Id" class="btn btn-sm btn-info">View Details</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">No doctors found.</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>