@model DoctorIndexViewModel

@{
    ViewData["Title"] = "Doctors";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-dark">Doctors</h1>
        <a asp-controller="Doctor" asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
            <i class="bi bi-plus-circle me-2"></i> Create Doctor
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0 fw-bold">All Doctors</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                    <tr>
                        <th class="py-3 px-4 text-secondary">ID</th>
                        <th class="py-3 text-secondary">Name</th>
                        <th class="py-3 text-secondary">Specialty</th>
                        <th class="py-3 text-secondary text-end pe-4">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model != null && Model.Doctors!.Any())
                    {
                        @foreach (var doctor in Model.Doctors!)
                        {
                            <tr>
                                <td class="py-3 px-4 text-muted small">@doctor.Id</td>
                                <td class="py-3 fw-semibold">@doctor.Name</td>
                                <td class="py-3">
                                    @if (!string.IsNullOrEmpty(doctor.Specialisation))
                                    {
                                        <span class="badge bg-light text-dark border px-3 py-2 rounded-pill">@doctor.Specialisation</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">None specified</span>
                                    }
                                </td>
                                <td class="py-3 text-end pe-4">
                                    <a asp-controller="Doctor" asp-action="Details" asp-route-id="@doctor.Id"
                                       class="btn btn-info btn-sm rounded-pill px-3 text-white shadow-sm">
                                        <i class="bi bi-eye me-1"></i> View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4">
                                <div class="py-5">
                                    <i class="bi bi-emoji-frown text-muted" style="font-size: 2rem;"></i>
                                    <p class="mt-3 mb-0 text-muted">No doctors found in the system.</p>
                                    <p class="text-muted small">Click the "Create Doctor" button to add a new doctor.</p>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
    }

    .bg-primary {
        background-color: #00bf9c !important;
    }

    .btn-primary, .btn-info {
        background-color: #00bf9c;
        border-color: #00bf9c;
    }

    .btn-primary:hover, .btn-info:hover {
        background-color: #009e82;
        border-color: #009e82;
    }

    .badge {
        font-weight: 500;
    }
</style>