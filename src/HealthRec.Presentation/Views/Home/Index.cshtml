@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
<div class="page-container">
    <section class="hero-section">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <div class="container-fluid px-4">
                <div class="row">
                    <div class="col-lg-8 mx-auto text-center">
                        <h1 class="hero-title">Welcome to Hospital Patient Management System</h1>
                        <p class="hero-text">Efficiently manage patient records, appointments, and reports.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="features-section">
        <div class="container-fluid px-4">
            <h2 class="features-title">Our Features</h2>

            <div class="row g-4 justify-content-center">
                <div class="col-md-4 col-lg-3">
                    <div class="feature-card card p-5 text-center">
                        <div class="card-body">
                            <div class="feature-icon icon-patient">
                                <i class="bi bi-person-lines-fill"></i>
                            </div>
                            <h3 class="feature-title">Patient Records</h3>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-lg-3">
                    <div class="feature-card card p-5 text-center">
                        <div class="card-body">
                            <div class="feature-icon icon-appointment">
                                <i class="bi bi-calendar-check"></i>
                            </div>
                            <h3 class="feature-title">Appointments</h3>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-lg-3">
                    <div class="feature-card card p-5 text-center">
                        <div class="card-body">
                            <div class="feature-icon icon-reports">
                                <i class="bi bi-graph-up"></i>
                            </div>
                            <h3 class="feature-title">Reports & Analytics</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>