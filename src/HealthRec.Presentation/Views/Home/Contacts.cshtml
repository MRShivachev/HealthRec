@{
    ViewData["Title"] = "Contact Us";
    Layout = "_Layout";
}

<style>
    :root {
        --primary-color: #1ed1a8;
        --primary-hover: #19b997;
        --dark-blue: #1d3557;
        --light-bg: #f8f9fa;
    }
    
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        font-size: 0.85rem;
    }
    
    .page-title {
        font-size: 2.2rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 1.5rem;
    }
    
    .section-title {
        font-size: 1.4rem;
        color: var(--dark-blue);
        margin-bottom: 1rem;
        font-weight: 600;
    }
    
    .contact-card {
        border-radius: 12px;
        border: none;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        height: 100%;
    }
    
    .contact-icon {
        background-color: var(--primary-color);
        color: white;
        width: 48px;
        height: 48px;
        font-size: 1.5rem;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 1rem;
    }
    
    .contact-info {
        font-size: 0.9rem;
        color: #555;
    }
    
    .contact-info strong {
        color: #333;
        font-weight: 600;
    }
    
    .form-label {
        font-size: 0.85rem;
        font-weight: 500;
    }
    
    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(30, 209, 168, 0.25);
    }
    
    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }
    
    .btn-primary:hover {
        background-color: var(--primary-hover);
        border-color: var(--primary-hover);
    }
    
    .map-container {
        height: 300px;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    
    @@media (max-width: 768px) {
        .page-title {
            font-size: 1.8rem;
        }
        
        .section-title {
            font-size: 1.2rem;
        }
    }
</style>

<div class="container py-4">
    <h1 class="page-title text-center">Contact Us</h1>
    
    <div class="row g-4 mb-5">
        <!-- Contact Information -->
        <div class="col-md-4">
            <div class="contact-card card p-4">
                <div class="card-body">
                    <div class="contact-icon">
                        <i class="bi bi-geo-alt"></i>
                    </div>
                    <h3 class="section-title">Our Location</h3>
                    <p class="contact-info">
                        <strong>HealthRec Medical Center</strong><br>
                        123 Medical Avenue<br>
                        Healthcare District<br>
                        New York, NY 10001
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="contact-card card p-4">
                <div class="card-body">
                    <div class="contact-icon">
                        <i class="bi bi-telephone"></i>
                    </div>
                    <h3 class="section-title">Phone & Email</h3>
                    <p class="contact-info">
                        <strong>Main Office:</strong> (555) 123-4567<br>
                        <strong>Emergency:</strong> (555) 987-6543<br>
                        <strong>Email:</strong> info@healthrec.com<br>
                        <strong>Support:</strong> support@healthrec.com
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="contact-card card p-4">
                <div class="card-body">
                    <div class="contact-icon">
                        <i class="bi bi-clock"></i>
                    </div>
                    <h3 class="section-title">Working Hours</h3>
                    <p class="contact-info">
                        <strong>Monday - Friday:</strong> 8:00 AM - 6:00 PM<br>
                        <strong>Saturday:</strong> 9:00 AM - 1:00 PM<br>
                        <strong>Sunday:</strong> Closed<br>
                        <strong>Emergency Services:</strong> 24/7
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row g-4">
        <!-- Contact Form -->
        <div class="col-lg-6 mb-4">
            <div class="card contact-card">
                <div class="card-body p-4">
                    <h3 class="section-title">Send Us a Message</h3>
                    <form id="contactForm" method="post" asp-controller="Home" asp-action="Contact">
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="subject" class="form-label">Subject</label>
                            <input type="text" class="form-control" id="subject" name="subject" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send me-1"></i> Send Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Map -->
        <div class="col-lg-6 mb-4">
            <div class="card contact-card">
                <div class="card-body p-4">
                    <h3 class="section-title">Find Us</h3>
                    <div class="map-container">
                        <!-- Replace with your actual map embed code -->
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387193.3059353029!2d-74.25986548248684!3d40.69714941680757!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2s!4v1594082228121!5m2!1sen!2s" 
                                width="100%" height="100%" style="border:0;" allowfullscreen="" 
                                loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                    
                    <div class="mt-3">
                        <h4 class="h6">Getting Here</h4>
                        <p class="contact-info mb-0">
                            Our facility is conveniently located near public transportation. The nearest subway stations are Central Station (Lines A, B, C) and Medical Center (Lines 1, 2, 3). There is also parking available on site for patients and visitors.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- FAQ Section -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card contact-card">
                <div class="card-body p-4">
                    <h3 class="section-title">Frequently Asked Questions</h3>
                    
                    <div class="accordion" id="faqAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                                        data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                    How do I schedule an appointment?
                                </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" 
                                 data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    You can schedule an appointment by calling our main office at (555) 123-4567, or by using our online appointment system through the patient portal.
                                </div>
                            </div>
                        </div>
                        
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingTwo">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                                        data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    How can I access my medical records?
                                </button>
                            </h2>
                            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" 
                                 data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Your medical records are available through our secure patient portal. You can log in using your patient credentials to view your records, appointments, and test results.
                                </div>
                            </div>
                        </div>
                        
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingThree">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                                        data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    What insurance plans do you accept?
                                </button>
                            </h2>
                            <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" 
                                 data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    We accept most major insurance plans including BlueCross BlueShield, Aetna, Cigna, and Medicare. Please contact our billing department for more specific information about your insurance coverage.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form validation and submission handling
        document.getElementById('contactForm').addEventListener('submit', function(event) {
            event.preventDefault();
            
            // You can implement form submission via AJAX here
            // For demonstration, we'll just show a success message
            
            alert('Your message has been sent. We will contact you shortly.');
            this.reset();
        });
    </script>
}