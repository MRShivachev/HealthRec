@{
    ViewData["Title"] = "Select Role";
    Layout = "_AuthLayout";
}

<div class="container py-5">
    <div class="row text-center mb-5">
        <div class="col">
            <h2 class="display-4 text-primary fw-bold">HEALTH RECORDS SYSTEM</h2>
        </div>
    </div>

    <div class="row justify-content-center g-4">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow h-100 border-0 rounded-3 ">
                <div class="card-body text-center p-4">
                    <div class="bg-primary bg-opacity-100 p-3 rounded-circle d-inline-block mb-3">
                        <i class="bi bi-person-badge fs-1 text-primary"></i>
                    </div>
                    <h3 class="card-title fw-bold">Вхоп за доктори</h3>
                   
                    <a asp-controller="Authentication" asp-action="DoctorLogin" class="btn btn-primary btn-lg fw-bold w-100 py-2">Вход</a>
                </div>
            </div>
        </div>

        <div class="col-md-5 col-lg-4">
            <div class="card shadow h-100 border-0 rounded-3">
                <div class="card-body text-center p-4">
                    <div class="bg-success bg-opacity-100 p-3 rounded-circle d-inline-block mb-3">
                        <i class="bi bi-person fs-1 text-success"></i>
                    </div>
                    <h3 class="card-title fw-bold">Вход за пациенти</h3>
                    
                    <a asp-controller="Patient" asp-action="VerifySecurityCode" class="btn btn-success btn-lg fw-bold w-100 py-2" style="background-color: #1abc9c; border-color: #1abc9c;">Вход</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-secondary">
        Обратно към начална страница
    </a>
</div>