@using HealthRec.Common
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model HealthRec.Services.Authentication.Models.RegisterPatientViewModel
@{
    ViewData["Title"] = "Patient Register";
    Layout = "_AuthLayout";
}

<p class="text-center">@T.RegisterTitle</p>
<form asp-action="PatientRegister" method="post">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">@T.EmailTitle</label>
        <input asp-for="Email"
               class="form-control"
               aria-describedby="emailHelp"
               placeholder="@T.EmailPlaceholder">you
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-4">
        <label asp-for="Password">@T.PasswordTitle</label>
        <input type="password"
               asp-for="Password"
               class="form-control"
               placeholder="@T.PasswordPlaceholder">
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="mb-4">
        <label asp-for="ConfirmPassword">@T.ConfirmPasswordTitle</label>
        <input type="password"
               class="form-control"
               asp-for="ConfirmPassword"
               placeholder="@T.ConfirmPasswordPlaceholder">
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    <button type="submit" class="btn btn-success btn-lg fw-bold w-100 py-2" style="background-color: #1abc9c; border-color: #1abc9c;" href=@Url.Action("PatientLogin")>@T.RegisterButtonText</button>
</form>