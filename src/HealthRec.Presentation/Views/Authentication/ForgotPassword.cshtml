@model HealthRec.Presentation.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "_AuthLayout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h1 class="text-center mt-4 mb-4" style="color: #1abc9c;">HEALTH RECORDS SYSTEM</h1>
            
            <div class="card shadow">
                <div class="card-header text-white text-center py-3" style="background-color: #1abc9c;">
                    <h2 class="m-0 fs-4">Password Recovery</h2>
                </div>
                
                <div class="card-body p-4">
                    <h4 class="text-center mb-4" style="color: #1abc9c;">Medical Professional Access</h4>
                    
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <p class="text-muted mb-4">
                            Enter your email address below. We will send you a link to reset your password.
                        </p>
                        
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" autocomplete="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn text-white py-2" style="background-color: #1abc9c;">
                                Send Reset Link
                            </button>
                        </div>
                    </form>
                    
                    <div class="text-center mt-3">
                        <a asp-page="/Account/Login" class="text-decoration-none" style="color: #1abc9c;">Back to Login</a>
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-3">
                <a asp-page="./RoleSelection" class="btn btn-outline-secondary">Back to Role Selection</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}