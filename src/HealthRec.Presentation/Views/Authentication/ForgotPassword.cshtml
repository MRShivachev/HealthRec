@model HealthRec.Presentation.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "_AuthLayout";
}

<style>
    :root {
        --primary-color: #00b893;
        --primary-hover: #00b893;
        --white: #ffffff;
        --light-bg: #f8f9fa;
        --text-color: #333333;
        --border-color: #e2e8f0;
    }

    body {
        background-color: var(--light-bg);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .main-title {
        color: var(--primary-color);
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .password-container {
        max-width: 650px;
        margin: 2rem auto;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        background-color: var(--white);
    }

    .password-header {
        background-color: var(--primary-color);
        color: var(--white);
        padding: 2rem;
        text-align: center;
    }

    .password-header h2 {
        font-size: 1.8rem;
        font-weight: 600;
        margin-top: 0.5rem;
    }

    .key-icon {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .password-body {
        padding: 2rem;
        text-align: center;
    }

    .instruction-text {
        margin-bottom: 1.5rem;
        font-size: 1rem;
        color: var(--text-color);
    }

    .email-input {
        width: 100%;
        padding: 0.75rem 1rem;
        font-size: 1.25rem;
        text-align: center;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .info-list {
        text-align: left;
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }

    .info-list li {
        color: var(--text-color);
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .action-button {
        background-color: var(--primary-color);
        color: var(--white);
        border: none;
        border-radius: 8px;
        padding: 1rem;
        font-size: 1rem;
        font-weight: 600;
        width: 100%;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .action-button:hover {
        background-color: var(--primary-hover);
    }

    .divider {
        border-top: 1px solid var(--border-color);
        margin: 1.5rem 0;
    }

    .help-section {
        text-align: left;
        padding: 0 1rem;
    }

    .help-section h3 {
        font-size: 1.2rem;
        color: var(--text-color);
        margin-bottom: 1rem;
    }

    .help-item {
        display: flex;
        margin-bottom: 0.75rem;
    }

    .help-number {
        background-color: var(--primary-color);
        color: var(--white);
        width: 24px;
        height: 24px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 0.8rem;
        margin-right: 0.75rem;
        flex-shrink: 0;
    }

    .help-text {
        font-size: 0.9rem;
        color: var(--text-color);
    }

    .security-note {
        display: flex;
        justify-content: center;
        align-items: center;
        color: var(--text-color);
        font-size: 0.8rem;
        margin-top: 1rem;
        padding: 0.75rem;
        text-align: center;
    }

    .security-note i {
        margin-right: 0.5rem;
        color: var(--primary-color);
    }

    .validation-message {
        color: #dc3545;
        font-size: 0.8rem;
        margin-top: -1rem;
        margin-bottom: 1rem;
        text-align: left;
    }
</style>

<div class="container">
    <h1 class="main-title" style="margin-top: 35px">HEALTH RECORDS SYSTEM</h1>

    <div class="password-container">
        <div class="password-header">
            <i class="bi bi-key-fill key-icon"></i>
            <h2>Възтановяване на парола</h2>
        </div>

        <div class="password-body">
            <p class="instruction-text">
                Моля въведете имейла си за да получите линк за възтановяване на парола
            </p>

            <form asp-action="ForgotPassword" asp-controller="Authentication" method="post">
                <input asp-for="Email" class="email-input" placeholder="Въведете имейл адрес" autocomplete="email" />
                <span asp-validation-for="Email" class="validation-message"></span>

                <ul class="info-list">
                    <li>Въведете имейл адресът свързан с този профил</li>
                    <li>Ще получите съобщение с инструкции за възтановяване на паролата</li>
                    <li>Ако не сте получили съобщение, моля проверете вашата спам папка</li>
                </ul>

                <button type="submit" class="action-button">Reset Password</button>
            </form>

            <div class="divider"></div>

            <div class="help-section">
                <h3>Нямате достъп до вашия имейл?</h3>

                <div class="help-item">
                    <div class="help-number">1</div>
                    <div class="help-text">Свържете се директно с вашия доставчик на здравни услуги</div>
                </div>

                <div class="help-item">
                    <div class="help-number">2</div>
                    <div class="help-text">Обадете се на нашия център за поддръжка на (555) 123-4567</div>
                </div>

                <div class="help-item">
                    <div class="help-number">3</div>
                    <div class="help-text">Посетете местната клиника с личната си карта за да получите лична помощ</div>
                </div>
               
            </div>
           
        </div>
      

        <div class="security-note">
            <i class="bi bi-shield-lock-fill"></i>
            Вашата поверителност е важна за нас. Всички данни са криптирани и защитени.
        </div>
        
    </div>
    <div class="text-center mt-3">
        <a asp-controller="Authentication" asp-action="Login" class="btn btn-sm btn-outline-secondary">
            Обратно към избор
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
        document.addEventListener('DOMContentLoaded', function() {
            // Focus on email field when the page loads
            document.getElementById('Email').focus();
            
            // Animate validation summary if present
            const validationSummary = document.querySelector('.validation-summary');
            if (validationSummary && validationSummary.innerHTML.trim() !== '') {
                validationSummary.style.opacity = 0;
                validationSummary.style.transform = 'translateX(-20px)';
                validationSummary.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                
                setTimeout(() => {
                    validationSummary.style.opacity = 1;
                    validationSummary.style.transform = 'translateX(0)';
                }, 300);
            } else if (validationSummary) {
                validationSummary.style.display = 'none';
            }
        });
    </script>
