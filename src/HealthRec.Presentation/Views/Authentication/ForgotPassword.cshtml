@model ForgotPasswordViewModel

@{
    Layout = null;
}

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Forgot Password</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow p-4" style="max-width: 600px; width: 100%;">
        <div class="card-body">
            <h4 class="fs-3 text-center mb-3">Забравена парола</h4>
            <p class="text-center">Въведете своя имейл, за да получите връзка за нулиране на паролата.</p>

            <form asp-action="ForgotPassword" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Имейл</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Въведете имейл" required>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fs-5 rounded-2">Нулиране на парола</button>

                <div class="text-center mt-3">
                    <a href="@Url.Action("Login")" class="text-primary fw-bold">Обратно към вход</a>
                </div>
            </form>
        </div>
    </div>
    </body>